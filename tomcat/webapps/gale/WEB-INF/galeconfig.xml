		<property name="baseURL" value="http://localhost:8080/gale/services/" />
		<property name="autoRegister">
			<map>
				<entry>
					<key>
						<value>updateCAMModel;getCourses;getCourseCount;queryUMDataResponse
						</value>
					</key>
					<value>GaleEventListener</value>
				</entry>
