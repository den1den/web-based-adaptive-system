<?xml version="1.0" encoding="UTF-8"?>
<gale:repo
xmlns:gale="http://gale.tue.nl/adaptation">
    <h1 class="header center green-text">
        <gale:text tag="default" type="creole">
            How stressed are you today?
            <br/>${#questionScore}: {<gale:variable expr="${question#questionScore}" />}
        </gale:text>

    </h1>
    <div class="row center">
        <h5 class="header col s12 light">
            Stress is defined as being really annoyed by your group members calling you mom.
        </h5>
        <br/>
        <div class="waves-effect waves-light btn btn-large">
            <gale:text tag="default" type="creole">
                [[question?pq=2|A lot]]
            </gale:text>
        </div>
        <br/>
        <div class="waves-effect waves-light btn btn-large">
            <gale:text tag="default" type="creole">
                [[question?pq=2|A decent amount]]
            </gale:text>
        </div>
        <br/>
        <div class="waves-effect waves-light btn btn-large">
            <gale:text tag="default" type="creole">
                [[question?pq=3|A little]]
            </gale:text>
        </div>
        <br/>
        <div class="waves-effect waves-light btn btn-large">
            <gale:text tag="default" type="creole">
                [[question?pq=2|Nothing at all]]
            </gale:text>
        </div>

    </div>
    <br/>
    <div id="question-progress-bar">
        <div class="progress">
          <div class="determinate" style="width: 70%"></div>
        </div>
        <span>70% completed</span>
    </div>
    <div style="display: none">
        <gale:text tag="default" type="creole">
            Previous question:
            <gale:variable expr="${question#previousQuestion}" />
        </gale:text>
    </div>
</gale:repo>
