<?xml version="1.0" encoding="UTF-8"?>
<gale:repo
xmlns:gale="http://gale.tue.nl/adaptation">
    <h1 class="header center green-text">
        <gale:text tag="default" type="creole">
            <!-- Question title is printed here. -->

            <!--
            if(showText == true){
                // Show textual question
                <gale:variable expr="${question#questionTextArray[question id][0]}" />
            }else{
                // Show image question
                <gale:variable expr="${question#questionTextArray[question id][1]}" />
            }
            -->
        </gale:text>
        <gale:variable expr="${#questionTxt}" />
    </h1>
    <div class="row center">
        <h5 class="header col s12 light">
            <!-- Question sub title ('detailed explanation') is printed here, should with hide this by default? -->

            <!--
            <gale:variable expr="${question#questionTextArray[question id][2]}" />
            -->
        </h5>
        <br/>
        <div class="waves-effect waves-light btn btn-large" id="question1">
            <gale:text tag="default" type="creole">
                <!-- Answer 1
                GALE link consisting of [[ (link to new page + pq + pa | Textual discription]]
                [[question?pq=<gale:variable expr="${question#currentQuestionID" /> | <gale:variable expr="${question#questionTextArray[question id][3]}" /> ]]
                -->
                <gale:variable expr="${#answer1Text}" />
            </gale:text>
        </div>
        <br/>
        <div class="waves-effect waves-light btn btn-large" id="question2">
            <gale:text tag="default" type="creole">
                <!-- Answer 2
                GALE link consisting of [[ (link to new page + pq + pa | Textual discription]]
                [[question?pq=<gale:variable expr="${question#currentQuestionID" /> | <gale:variable expr="${question#questionTextArray[question id][4]}" /> ]]
                -->
                <gale:variable expr="${#answer2Text}" />
            </gale:text>
        </div>
        <br/>
        <div class="waves-effect waves-light btn btn-large" id="question3">
            <gale:text tag="default" type="creole">
                <!-- Answer 3
                GALE link consisting of [[ (link to new page + pq + pa | Textual discription]]
                [[question?pq=<gale:variable expr="${question#currentQuestionID" /> | <gale:variable expr="${question#questionTextArray[question id][5]}" /> ]]
                -->
                <gale:variable expr="${#answer3Text}" />
            </gale:text>
        </div>

    </div>
    <br/>
    <div id="question-progress-bar">
        <div class="progress">
          <div class="determinate" style="width: 70%"></div>
        </div>
        <span>70% completed</span>
    </div>
    <div class="joke-badge">
          <a href="#modal1">
            <div class="chip">
                  <i class="material-icons">textsms</i>
            </div>
        </a>
    </div>
     <!-- Modal Structure -->
     <div id="modal1" class="modal">
           <div class="modal-content">
                 <h4>Joke header</h4>
                 <p>Babies in blenders?</p>
           </div>
           <div class="modal-footer">
               <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
           </div>
     </div>

    <div style="display: none">
        <gale:text tag="default" type="creole">
            Previous question:
            <!-- <gale:variable expr="${question#previousQuestion}" /> -->
        </gale:text>
    </div>

    <script>
        (function($){
        $( document ).ready(function() {
            var questionIndex = <gale:variable expr="${question#questionIndex}" />;
            var amp = String.fromCharCode(38);
            $( "#question1" ).click(function( event ) {
                window.location = '/gale/concept/http://localhost:8000/question?pq=' + questionIndex + amp + 'pa=0';
            });
            $( "#question2" ).click(function( event ) {
                window.location = '/gale/concept/http://localhost:8000/question?pq=' + questionIndex + amp + 'pa=1';
            });
            $( "#question3" ).click(function( event ) {
                window.location = '/gale/concept/http://localhost:8000/question?pq=' + questionIndex + amp + 'pa=2';
            });
        });
        })(jQuery);
    </script>
</gale:repo>